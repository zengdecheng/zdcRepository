<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "file:///D:/workgen/struts-2.0.dtd">

<struts>
	<include file="struts-default.xml" />
	<constant name="struts.ognl.allowStaticMethodAccess" value="true" />
	<package name="struts-base" extends="struts-default">
		<interceptors>
			<interceptor name="utf_iso" class="org.use.base.interceptor.Utf_IsoInterceptor" />
			<interceptor name="fsp" class="org.use.base.interceptor.FspInterceptor" />
			<interceptor name="login" class="com.xbd.oa.interceptor.LoginInterceptor" />
			<interceptor-stack name="useStack">
				<interceptor-ref name="login" />
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="fsp" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="useStack" />
		<global-results>
			<result name="adminLogin" type="redirect">/admin?err=login</result>
			<result name="factoryLogin" type="redirect">/factory.jsp</result>
			<result name="shopLogin" type="redirect">/shop.jsp</result>
			<result name="factoryLogin" type="redirect">/factory</result>
			<result name="authError">/authError.jsp</result>
		</global-results>
	</package>

</struts>